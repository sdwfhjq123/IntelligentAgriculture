<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            style="@style/TitleStyle"
            android:layout_marginTop="5dp"
            android:text="土壤详情" />

        <ImageButton
            android:id="@+id/fanhui_soil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="5dp"
            android:src="@mipmap/fanhuianniu" />

        <View
            style="@style/LineStyle"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@mipmap/turangbeijing"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:id="@+id/ll1_soil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当前土壤温度:"
                android:textColor="#e29c00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="温度设定范围："
                android:textColor="#e29c00" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2_soil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll1_soil"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/soilw_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="200"
                android:textColor="#e29c00" />

            <TextView
                android:id="@+id/soilws_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="null~null"
                android:textColor="#e29c00" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3_soil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll2_soil"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/soil_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当前土壤湿度"
                android:textColor="#e29c00" />

            <TextView
                android:id="@+id/soil2_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="湿度设定范围"
                android:textColor="#e29c00" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4_soil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll3_soil"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/soils_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="200"
                android:textColor="#e29c00" />

            <TextView
                android:id="@+id/soilss_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="null~null"
                android:textColor="#e29c00" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/fengshan_soil"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/dakaifengshan" />-->

            <ImageView
                android:id="@+id/iv_dakaiguangzhao_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/dakaiguangzhao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/iv_dakaishuibeng_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/dakaishui" />

            <ImageView
                android:id="@+id/iv_dakaibaojing_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/dakaibaojing" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
