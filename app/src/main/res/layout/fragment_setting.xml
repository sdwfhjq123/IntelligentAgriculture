<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="设置" />

    <View
        style="@style/LineStyle"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl__autocontrol"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="#fff"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/zidong_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/zidongkongzhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/zidong_setting"
                android:text="自动控制"
                android:textColor="#000"
                android:textSize="20sp" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@mipmap/gengduo" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="60dp"

            android:background="#fff"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/qingchu_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/qinchuhuancun" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/qingchu_setting"
                android:text="清除缓存"
                android:textColor="#000"
                android:textSize="20sp" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:text="100M"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="60dp"

            android:background="#fff"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/banbengenxi_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/banbengengx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/banbengenxi_setting"
                android:text="清除缓存"
                android:textColor="#000"
                android:textSize="20sp" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:text="V1.0"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="60dp"

            android:background="#fff"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/guanyuwomen_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/guanyuwomen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/guanyuwomen_setting"
                android:text="自动控制"
                android:textColor="#000"
                android:textSize="20sp" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@mipmap/gengduo" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/tuichu_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/my_exit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tuichu_setting"
                android:text="退出登录"
                android:textColor="#000"
                android:textSize="30sp" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>