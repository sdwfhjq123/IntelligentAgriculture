<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1d1d1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            style="@style/TitleStyle"
            android:layout_marginTop="5dp"
            android:text="阈值设置" />

        <ImageButton
            android:id="@+id/fanhui_shoudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="5dp"
            android:src="@mipmap/fanhuianniu" />

        <View
            style="@style/LineStyle"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/nongdu1_co2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2浓度值:"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_co2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/nongdu1_co2"
                android:text="200"
                android:textColor="#0057ff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nongdu2_co2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_co2_value"
                android:text="CO2浓度当前状态:"
                android:textColor="#000"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_co2_state"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/nongdu2_co2"
                android:src="@mipmap/p3" />

            <TextView
                android:id="@+id/zuixiao_co2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nongdu1_co2"
                android:layout_marginTop="10dp"
                android:text="最小值:"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_co2_min"
                android:layout_width="63dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/et_co2_max"
                android:layout_toRightOf="@id/zuixiao_co2"
                android:background="@drawable/shape_circle_edit_setting_bg"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/zuida_co2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nongdu1_co2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/et_co2_min"
                android:paddingLeft="25dp"
                android:text="最大值:"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_co2_max"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_below="@+id/nongdu1_co2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/zuida_co2"
                android:background="@drawable/shape_circle_edit_setting_bg"
                android:paddingLeft="10dp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_co2_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:text="确定"
        android:textColor="#000"
        android:textSize="20sp" />

</LinearLayout>
