<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/kongqibeijing">

        <TextView
            android:id="@+id/tv_msg_dialog_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="欢迎您，请先设置服务器IP"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_ip_number_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msg_dialog_ip"
            android:layout_marginTop="10dp"
            android:hint="请输入设备上显示的IP地址" />

        <Button
            android:id="@+id/btn_confirm_dialog_ip"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="#7dc69c"
            android:text="确定" />

    </RelativeLayout>

</LinearLayout>
